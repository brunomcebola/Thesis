{% extends "base.jinja" %}
{% block title %}
  Datasets
{% endblock title %}
{% block body %}
  <div class="container py-4">
    <div class="row justify-content-center pb-3">
      <div class="col my-auto ps-3">
        <h2 class="m-0">Datasets</h2>
      </div>
      <div class="col my-auto">
        <div class="input-group">
          <input class="form-control rounded-pill"
                 type="search"
                 placeholder="Search for a dataset" />
        </div>
      </div>
      <div class="col my-auto align-right pe-3">
        <button type="button"
                class="btn btn-primary"
                data-bs-toggle="modal"
                data-bs-target="#new-area-modal">Add dataset</button>
      </div>
    </div>
    <div class="modal fade"
         id="new-area-modal"
         data-bs-backdrop="static"
         tabindex="-1"
         aria-labelledby="staticBackdropLabel"
         aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
            <button type="button"
                    class="btn-close"
                    data-bs-dismiss="modal"
                    aria-label="Close"></button>
          </div>
          <div class="modal-body">...</div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </div>
    </div>
    {% if datasets is defined %}
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-8">
            <div class="data-list d-flex justify-content-center mt-2">
              <div class="list">
                {% for dataset in datasets %}
                  <div class="list-item d-flex mb-3 p-2"
                       onclick="redirectTo('{{ url_for('gui.dataset', dataset_name=dataset.name) }}')">
                    <div class="type-icon p-0 ps-1 d-flex align-items-center">
                      <i class="mdi mdi-database">
                      </i>
                    </div>
                    <div class="text-container p-0 mx-3 text-start">
                      <p id="name" class="m-0">{{ dataset.name }}</p>
                      <p id="description" class="m-0 mt-1">{{ dataset.description }}</p>
                    </div>
                    <div class="actions-container p-0 pe-1 d-flex align-items-center">
                      <button type="button" class="btn">
                        <i class="mdi mdi-delete"></i>
                      </button>
                    </div>
                  </div>
                {% endfor %}
              </div>
            </div>
          </div>
        </div>
      </div>
    {% else %}
      <div class="container">
        <div class="row">
          <div class="col-12 text-center mt-5">
            <h4>There are no datasets defined!</h4>
          </div>
        </div>
        <div class="row">
          <div class="col-12 text-center mt-4" style="height: 25vh;">
            <img src="{{ url_for('gui.static', filename='img/empty.svg') }}"
                 alt="404"
                 class="img-fluid"
                 style="height: 25vh" />
          </div>
        </div>
      </div>
    {% endif %}
  </div>
  <script>
    function redirectTo(url) {
        window.location.href = url;
    }
  </script>
{% endblock body %}
